<table class="table table-bordered">
    <thead class="table-active">
      <th>ID</th>
      <th>Title</th>
      <th>Content</th>
      <th>Created On</th>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.id %></td>
          <td><%= task.title %></td>
          <td><%= task.content %></td>
          <td><%= task.created_at.strftime("%d %b. %Y") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>